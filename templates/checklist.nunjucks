{% macro listItem(item) %}
<li>
  <label>
    <input type="checkbox" class="checklist-item" data-checklist-key="{{ item.key }}"/><span>{{ item.label }}</span>
  </label>
  <span class="auto-comment-status"></span>
</li>
{% endmacro %}

<div id="{{ id }}" class="checklist">
  <h2>Checklist</h2>
  <ul>
  {% for item in items %}
    {{ listItem(item) }}
  {% endfor %}
  </ul>
</div>
