{
  "manifest_version": 2,
  "name": "GitHub PR Checklist",
  "version": "1.0",
  "description": "GitHub pull request checklist",
  "page_action": {
    "default_title": "GitHub PR Checklist"
  },
  "content_scripts": [
    {
      "matches": ["https://*.github.com/*/pull/*"],
      "js": ["main.js"],
      "css": ["main.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
